<div id="wrapper">
	<%= render "header" %>
	<div class="clearfix"></div>
	<div id="dashboard">
		<a href="#" class="dashboard-responsive-nav-trigger"><i class="fa fa-reorder"></i> Dashboard Navigation</a>
		<%= render "nav" %>
		<div class="dashboard-content">
			<div id="titlebar">
				<div class="row">
					<div class="col-md-12">
						<h2>My Profile</h2>
						<nav id="breadcrumbs">
							<ul>
								<li>
									<%= link_to "Home", root_path %>
								</li>
								<li>
									<%= link_to "Dashboard", user_path( current_user ) %>
								</li>
								<li>My Profile</li>
							</ul>
						</nav>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-6 col-md-12">
					<div class="dashboard-list-box margin-top-0">
						<h4 class="gray">Profile Details</h4>
						<div class="dashboard-list-box-static">
							<div class="edit-profile-photo">
								<%= image_tag "avatar.jpg" %>
								<div class="change-photo-btn">
									<div class="photoUpload">
										<span><i class="fa fa-upload"></i> Upload Photo</span>
										<input type="file" class="upload" />
									</div>
								</div>
							</div>
							<%= render "user_info_update" %>
						</div>
					</div>
				</div>
				<div class="col-lg-6 col-md-12">
					<div class="dashboard-list-box margin-top-0">
						<h4 class="gray">Change Password</h4>
						<div class="dashboard-list-box-static">
							<div class="my-profile">
								<%= render "user_password_update" %>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-6 col-md-12 margin-top-20">
					<div class="dashboard-list-box margin-top-0">
						<h4 class="gray">Zip Code</h4>
						<div class="dashboard-list-box-static">
							<div class="my-profile">
								<%= render "user_location_update" %>
							</div>
						</div>
					</div>
				</div>
				<%= render "dash_footer" %>
			</div>
		</div>
	</div>
</div>

<script>
	$('input[type="range"].distance-radius').rangeslider({
		polyfill: false,
		onInit: function () {
			this.output = $('<div class="range-output" />').insertBefore(this.$range).html(this.$element.val());
			var radiustext = $('.distance-radius').attr('data-title');
			$('.range-output').after('<i class="data-radius-title">' + radiustext + '</i>');
		},
		onSlide: function (position, value) {
			this.output.html(value);
		}
	});
</script>
