<div class="right-side">
  <div class="header-widget">
    <nav id="navigation" class="style-1 navbar-right" style="float:right;">
      <ul>
        <li class="padding-left-25 padding-right-25 user-icon-padding" style="top:5px;">
          <div class="user-name">
            <span>
              <%= image_tag "avatar.jpg" %>
            </span>
            <% if @user %>
              <p class="profile-name"><%= "#{current_user.first_name} #{current_user.last_name}" %></p>
            <% else %>
              <p class="profile-name"><%= "#{current_user.pharmacy_name}" %></p>
            <% end %>
          </div>
          <ul class="padding-top-10 padding-bottom-10 text-left">
            <li>
              <%= link_to( availability_path ) do %>
                <i class="sl sl-icon-clock"></i>
                Set Availibility
              <% end %>
            </li>
            <li>
              <%= link_to user_path( current_user, :page_view => "messages" ) do %>
                <i class="sl sl-icon-envelope-open"></i>
                Messages
              <% end %>
            </li>
            <li>
              <%= link_to user_path( current_user, :page_view => "profile" ) do %>
                <i class="sl sl-icon-user"></i>
                My Profile
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: "delete" do %>
                <i class="sl sl-icon-power"></i>
                Logout
              <% end %>
            </li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</div>
